      <statements sctype="operator">$rem="                                                v3 is the value of the 3rd field in the key to ADL-enabled file                                                                                              "</statements>
      <statements sctype="operator">$rem="                                                vn is the value of the nth field in the key to ADL-enabled file                                                                                              "</statements>
      <statements sctype="operator">$rem="       The delimiter between the file name and the first key value is a semicolon (;), the delimiter between key values is a comma (,)                                   "</statements>
      <statements sctype="expression"/>
      <statements sctype="operator">$L.tagval=$L.adlenbfilnam+";"</statements>
      <statements sctype="operator">for $L.idx = 1 to $L.nbrofkeyfld do (if ($L.idx&gt;1) then ($L.tagval=$L.tagval+",");$L.tagval=$L.tagval+$L.idx in $L.keyval)</statements>

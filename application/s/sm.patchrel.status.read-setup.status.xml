      <statements sctype="string"/>
      <statements sctype="operator">// Populate the lang.selected array of structure in the patchrelstatus record ONLY when these two conditions are met:</statements>
      <statements sctype="operator">// (1) The language is available in the Patch Release (i.e., the selected flag in the lang.selected array in patchrelinfo is true).</statements>
      <statements sctype="operator">// (2) The language is active on the customer's system.</statements>
      <statements sctype="string"/>
      <statements sctype="operator">$L.idxO=1</statements>
      <statements sctype="operator">for $L.idxI = 1 to lng(denull(lang.selected in $L.patchrelinfoBfr)) do (if (1 in $L.idxI in lang.selected in $L.patchrelinfoBfr=true) then ($L.rem="Even though the language was included in the Patch Release, determine if that language is active on the customer's system.";$L.wrkLanCod=3 in $L.idxI in lang.selected in $L.patchrelinfoBfr;$L.languageQryVar="unique.id=\""+$L.wrkLanCod+"\"";$L.scsFlg=rtecall("select", $L.rtnCod, $L.languageBfr, $L.languageQryVar);$L.rem="Display that language as updateable ONLY if it is active on the customer's system.";if ($L.scsFlg=true and $L.rtnCod~=3 and active in $L.languageBfr=true) then ($L.idxO in lang.selected in $L.file=$L.idxI in lang.selected in $L.patchrelinfoBfr;$L.idxO+=1)))</statements>

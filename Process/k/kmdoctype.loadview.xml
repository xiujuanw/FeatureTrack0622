    //get the fields from q
    var q0 = q[0];
    var flds = q0.field;

    //empty field arrays
    var flength = flds.length();
    vars.$L_kmdocfieldslist = new Array(flength);
    vars.$L_kmdocfieldsdisplist = new Array(flength);


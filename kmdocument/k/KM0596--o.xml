    <title type="string">Email access - Add or Remove People or Lists from an Outlook Public Distribution</title>
    <summary type="string">Email access - Add or Remove People or Lists from an Outlook Public Distribution List ( PDL )</summary>
    <doctype type="string">reference</doctype>
    <category type="string">reference</category>
    <categories sctype="array">
      <categories sctype="string">KM012T:KM016T</categories>
